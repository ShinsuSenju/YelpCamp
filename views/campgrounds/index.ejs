<% layout('layout/boilerplate')%>
<h1>All Campgrounds</h1>
<a href="/campgrounds/new" class="btn btn-success mt-3 mb-3">Add Campground</a>

<% for (let campground of campgrounds) {%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if(campground.images.length){ %>
      <img
        src="<%=campground.images[0].url%>"
        alt="<%=campground.title %>"
        class="img-fluid"
      />
      <% } else { %> <
      <img
        src="https://unsplash.com/photos/ocean-smashed-to-sand-during-golden-hour-Ete0zMKPWys"
        alt="<%=campground.title %>"
        class="img-fluid"
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%=campground.title%></h5>
        <p class="card-text"><%=campground.description%></p>
        <p class="card-text">
          <small class="text-muted"><%=campground.location%></small>
        </p>
        <a href="/Campgrounds/<%=campground._id%>" class="btn btn-primary"
          >View <%=campground.title%></a
        >
      </div>
    </div>
  </div>
</div>

<% } %>
